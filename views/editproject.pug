.container
  h1(style='color:#CACACA')
    u Add New Project
  br
  br
  form(method='POST' action="/editproject")
    .col-md-4
    .col-md-4
      h2(style='color:#CACACA')
        b 1. Project Details
      br
      .form-group
        label(for='text' style='color:#CACACA') Customer Name:
        input#cust_name.form-control(type='text' placeholder='Enter Customer Name' name='cust_name' value=cust_name required)
      .form-group
        label(for='text' style='color:#CACACA') Project Name:
        input#proj_name.form-control(type='text' placeholder='Enter Project Name' name='proj_name' value=proj_name required)
      .form-group
        label(for='text' style='color:#CACACA') Contract Type:
        input#contr_typ.form-control(type='text' placeholder='Enter Contract Type' name='contr_typ' value=contr_typ required)
      .form-group
        label(for='date' style='color:#CACACA') Contract End Date:
        input#contr_end.form-control(type='date' placeholder='Enter Contract End Date' name='contr_end' value=contr_end required)
    .col-md-4
    br
    .col-md-12
      h2(style='color:#CACACA')
        b
          | 2. TTR
          b
      br
